{
  "node_type": "weather-api",
  "version": "1",
  "name": "Weather API",
  "description": "Fetch weather data from OpenWeatherMap API",
  "author": "Dify Custom Nodes",
  "icon": "☁️",
  "category": "data-source",
  "backend": {
    "entry": "node.py",
    "dependencies": [
      "requests>=2.31.0"
    ]
  },
  "frontend": {
    "entry": "index.ts"
  },
  "inputs": {
    "city": {
      "type": "string",
      "title": "City Name",
      "description": "City to get weather for",
      "required": true
    },
    "api_key": {
      "type": "string",
      "title": "OpenWeatherMap API Key",
      "description": "Get your API key from openweathermap.org",
      "required": true,
      "format": "password"
    },
    "units": {
      "type": "string",
      "title": "Temperature Units",
      "enum": ["metric", "imperial", "standard"],
      "default": "metric"
    }
  },
  "outputs": {
    "temperature": {
      "type": "number",
      "description": "Current temperature"
    },
    "feels_like": {
      "type": "number",
      "description": "Feels like temperature"
    },
    "humidity": {
      "type": "number",
      "description": "Humidity percentage"
    },
    "description": {
      "type": "string",
      "description": "Weather description"
    },
    "weather_data": {
      "type": "object",
      "description": "Full weather data object"
    }
  }
}
